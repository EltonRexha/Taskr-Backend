generator client {
  provider     = "prisma-client"
  output       = "./generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model User {
  clerkId        String          @id @map("clerk_id")
  email          String          @map("email")
  firstName      String          @map("first_name")
  lastName       String?         @map("last_name")
  profileImage   String          @map("profile_img_url")
  role           UserRole        @default(USER)
  createdAt      DateTime        @default(now()) @map("created_at")
  updatedAt      DateTime        @updatedAt @map("updated_at")
  notifications  Notification[]
  projectMembers ProjectMember[]
  projects       Project[]
  tasks          Task[]

  @@map("users")
}

model Notification {
  id          String           @id @default(uuid())
  user        User             @relation(fields: [userClerkId], references: [clerkId], onDelete: Cascade)
  userClerkId String
  type        NotificationType @map("notification_type")
  description String
  metaData    Json             @map("meta_data")
  createdAt   DateTime         @default(now()) @map("created_at")
  updatedAt   DateTime         @updatedAt @map("updated_at")

  @@map("notifications")
}

model Backlog {
  id            String         @id @default(uuid())
  createdAt     DateTime       @default(now()) @map("created_at")
  updatedAt     DateTime       @updatedAt @map("updated_at")
  scrumProjects ScrumProject[]
  scrumTasks    ScrumTask[]
  scrumEpics    ScrumEpic[]

  @@map("backlogs")
}

model Epic {
  id          String          @id @default(uuid())
  description String
  color       EpicColor       @map("epic_color")
  startDate   DateTime        @map("start_date") @db.Date
  dueDate     DateTime        @map("due_date") @db.Date
  createdAt   DateTime        @map("created_at")
  updatedAt   DateTime        @map("updated_at")
  assignedTo  ProjectMember[]
  scrumEpics  ScrumEpic[]

  @@map("epics")
}

model ScrumProject {
  id           String        @id @default(uuid())
  backlog      Backlog       @relation(fields: [backlogId], references: [id])
  backlogId    String        @map("backlog_id")
  createdAt    DateTime      @map("created_at")
  updatedAt    DateTime      @map("updated_at")
  draftSprints DraftSprint[]
  sprints      Sprint[]
  projects     Project[]

  @@map("scrum_projects")
}

model Sprint {
  id             String       @id @default(uuid())
  title          String
  startDate      DateTime     @map("start_date") @db.Date
  dueDate        DateTime     @map("due_date") @db.Date
  description    String
  sprintStatus   SprintStatus @default(DUE)
  createdAt      DateTime     @map("created_at")
  updatedAt      DateTime     @map("updated_at")
  scrumProject   ScrumProject @relation(fields: [scrumProjectId], references: [id])
  scrumProjectId String       @map("scrum_project_id")
  scrumEpics     ScrumEpic[]
  scrumTasks     ScrumTask[]

  @@map("sprints")
}

model DraftSprint {
  id             String       @id @default(uuid())
  title          String
  scrumProject   ScrumProject @relation(fields: [scrumProjectId], references: [id])
  scrumProjectId String       @map("scrum_project_id")
  createdAt      DateTime     @map("created_at")
  updatedAt      DateTime     @map("updated_at")
  scrumTasks     ScrumTask[]
  scrumEpics     ScrumEpic[]
}

model ScrumEpic {
  id            String       @id @default(uuid())
  epic          Epic         @relation(fields: [epicId], references: [id])
  epicId        String       @map("epic_id")
  sprint        Sprint?      @relation(fields: [sprintId], references: [id])
  sprintId      String?      @map("sprint_id")
  draftSprint   DraftSprint? @relation(fields: [draftSprintId], references: [id])
  draftSprintId String?
  backlog       Backlog?     @relation(fields: [backlogId], references: [id])
  backlogId     String?
  createdAt     DateTime     @map("created_at")
  updatedAt     DateTime     @map("updated_at")
  scrumTasks    ScrumTask[]

  @@map("scrum_epics")
}

model Project {
  id             String          @id @default(uuid())
  name           String
  scrumProject   ScrumProject    @relation(fields: [scrumProjectId], references: [id])
  scrumProjectId String          @map("scrum_project_id")
  projectType    ProjectType     @map("project_type")
  author         User?           @relation(fields: [userClerkId], references: [clerkId], onDelete: SetNull)
  userClerkId    String?         @map("user_clerk_id")
  starred        Boolean         @default(false)
  createdAt      DateTime        @map("created_at")
  updatedAt      DateTime        @map("updated_at")
  projectMembers ProjectMember[]
  tasks          Task[]

  @@map("projects")
}

model ProjectMember {
  id            String            @id @default(uuid())
  user          User              @relation(fields: [userClerkId], references: [clerkId], onDelete: Cascade)
  userClerkId   String            @map("user_clerk_id")
  role          ProjectMemberRole
  project       Project           @relation(fields: [projectId], references: [id])
  projectId     String            @map("project_id")
  createdAt     DateTime          @map("created_at")
  updatedAt     DateTime          @map("updated_at")
  assignedTasks Task[]
  assignedEpics Epic[]

  @@map("project_members")
}

model Task {
  id          String          @id @default(uuid())
  author      User?           @relation(fields: [userClerkId], references: [clerkId], onDelete: SetNull)
  userClerkId String?         @map("user_clerk_id")
  description String
  label       TaskLabel
  priority    TaskUrgency
  project     Project         @relation(fields: [projectId], references: [id])
  projectId   String          @map("project_id")
  startDate   DateTime        @map("start_date") @db.Date
  dueDate     DateTime        @map("due_date") @db.Date
  createdAt   DateTime        @map("created_at")
  updatedAt   DateTime        @map("updated_at")
  scrumTask   ScrumTask?
  assignedTo  ProjectMember[]

  @@map("tasks")
}

model ScrumTask {
  id            String          @id @default(uuid())
  task          Task            @relation(fields: [taskId], references: [id], onDelete: Cascade)
  taskId        String          @unique @map("task_id")
  scrumEpic     ScrumEpic?      @relation(fields: [scrumEpicId], references: [id], onDelete: Cascade)
  scrumEpicId   String?         @map("epic_id")
  draftSprint   DraftSprint?    @relation(fields: [draftSprintId], references: [id])
  draftSprintId String?         @map("draft_sprint_id")
  sprint        Sprint?         @relation(fields: [sprintId], references: [id])
  sprintId      String?         @map("sprint_id")
  backlog       Backlog?        @relation(fields: [backlogId], references: [id])
  backlogId     String?
  status        ScrumTaskStatus
  createdAt     DateTime        @map("created_at")
  updatedAt     DateTime        @map("updated_at")

  @@map("scrum_tasks")
}

enum TaskLabel {
  BUG
  FEATURE
  TASK
  REFACTOR
  CHORE
  SPIKE
  TECH_DEBT
}

enum TaskUrgency {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum ScrumTaskStatus {
  TODO
  IN_PROGRESS
  IN_REVIEW
  DONE
}

enum ProjectType {
  SCRUM
  KANBAN
}

enum ProjectMemberRole {
  ADMIN
  USER
}

enum SprintStatus {
  COMPLETED
  DUE
}

enum EpicColor {
  RED
  GREEN
  ORANGE
  YELLOW
}

enum NotificationType {
  Invitation
}

enum UserRole {
  ADMIN
  USER
}
